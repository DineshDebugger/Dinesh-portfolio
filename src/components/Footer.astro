<button
  id="backToTop"
  class="fixed right-8 bottom-8 z-50 flex h-12 w-12 translate-y-4 items-center justify-center rounded-full bg-gradient-to-br from-blue-500 to-purple-600 text-white opacity-0 shadow-lg transition-all duration-300 ease-in-out hover:scale-110 hover:shadow-xl"
  aria-label="Back to top"
>
  <svg
    class="h-6 w-6"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
  </svg>
</button>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const backToTopBtn: any = document.getElementById("backToTop");

    window.addEventListener("scroll", () => {
      if (window.scrollY > 300) {
        backToTopBtn.classList.remove("opacity-0", "translate-y-4");
        backToTopBtn.classList.add("opacity-75", "translate-y-0");
      } else {
        backToTopBtn.classList.remove("opacity-75", "translate-y-0");
        backToTopBtn.classList.add("opacity-0", "translate-y-4");
      }
    });

    backToTopBtn.addEventListener("click", () => {
      window.scrollTo({ top: 0, behavior: "smooth" });
    });
  });
</script>
